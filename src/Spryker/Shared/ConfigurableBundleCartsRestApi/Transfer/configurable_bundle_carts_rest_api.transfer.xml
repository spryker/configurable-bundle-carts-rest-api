<?xml version="1.0"?>
<transfers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="spryker:transfer-01"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestConfiguredBundlesAttributes">
        <property name="quantity" type="int" restRequestParameter="yes"/>
        <property name="templateUuid" type="string" restRequestParameter="yes"/>
        <property name="items" type="RestConfiguredBundleItemsAttributes[]" singular="item" restRequestParameter="yes"/>
    </transfer>

    <transfer name="RestConfiguredBundleItemsAttributes">
        <property name="sku" type="string"/>
        <property name="quantity" type="int"/>
        <property name="slotUuid" type="string"/>
    </transfer>

    <transfer name="CreateConfiguredBundleRequest">
        <property name="items" type="Item[]" singular="item"/>
        <property name="configuredBundle" type="ConfiguredBundle"/>
        <property name="localeName" type="string"/>
        <property name="quote" type="Quote"/>
    </transfer>

    <transfer name="UpdateConfiguredBundleRequest">
        <property name="quote" type="Quote"/>
        <property name="groupKey" type="string"/>
        <property name="quantity" type="int"/>
    </transfer>

    <transfer name="Quote">
        <property name="items" type="Item[]" singular="item"/>
        <property name="customer" type="Customer"/>
        <property name="customerReference" type="string"/>
        <property name="uuid" type="string"/>
    </transfer>

    <transfer name="Customer">
        <property name="idCustomer" type="int"/>
        <property name="customerReference" type="string"/>
    </transfer>

    <transfer name="ConfiguredBundle">
        <property name="template" type="ConfigurableBundleTemplate"/>
        <property name="quantity" type="int"/>
        <property name="groupKey" type="string"/>
    </transfer>

    <transfer name="ConfigurableBundleTemplate">
    </transfer>

    <transfer name="ConfigurableBundleTemplateSlot">
    </transfer>

</transfers>
